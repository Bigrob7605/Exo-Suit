  "optimization_rules": {
    "cache_optimization": {
      "enabled": true,
      "priority": 1,
      "conditions": {"cache_hit_rate": {"operator": "<", "value": 0.8}},
      "actions": ["increase_cache_size", "optimize_cache_strategy", "implement_prefetching"]
    },
    "memory_management": {
      "enabled": true,
      "priority": 2,
      "conditions": {"memory_usage": {"operator": ">", "value": 0.9}},
      "actions": ["garbage_collection", "memory_cleanup", "resource_optimization"]
    },
    "performance_tuning": {
      "enabled": true,
      "priority": 3,
      "conditions": {"execution_time": {"operator": ">", "value": 1.0}},
      "actions": ["algorithm_optimization", "parallel_processing", "resource_allocation"]
    },
    "gpu_optimization": {
      "enabled": true,
      "priority": 1,
      "conditions": {"gpu_utilization": {"operator": "<", "value": 0.7}},
      "actions": ["batch_size_optimization", "memory_transfer_optimization", "kernel_tuning"]
    }
  },
  
  "monitoring": {
    "metrics_collection_interval": 30,
