    "dreamweaver_builder": {
      "target_metrics": ["code_generation_time", "quality_score", "memory_usage"],
      "optimization_rules": ["template_optimization", "code_analysis", "resource_management"],
      "performance_targets": {
        "code_generation_time": {"target": 2.0, "unit": "seconds", "priority": "high"},
        "quality_score": {"target": 0.95, "unit": "percentage", "priority": "critical"},
        "memory_usage": {"target": 1024, "unit": "MB", "priority": "medium"}
