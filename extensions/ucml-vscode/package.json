{
  "name": "ucml-prompt-vc",
  "displayName": "UCML Prompt Version Control",
  "description": "Git for Prompts - UCML-powered prompt version control with glyph minting and social sharing",
  "version": "1.0.0",
  "publisher": "exo-suit",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "AI",
    "Version Control"
  ],
  "keywords": [
    "ucml",
    "prompt",
    "version-control",
    "ai",
    "glyph",
    "compression",
    "collaboration"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:ucml-prompt-vc.createPrompt",
    "onCommand:ucml-prompt-vc.viewHistory",
    "onCommand:ucml-prompt-vc.shareGlyph",
    "onCommand:ucml-prompt-vc.analyzeDrift",
    "onCommand:ucml-prompt-vc.resolveConflict",
    "onLanguage:markdown",
    "onLanguage:plaintext"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ucml-prompt-vc.createPrompt",
        "title": "UCML: Create New Prompt",
        "category": "UCML Prompt VC"
      },
      {
        "command": "ucml-prompt-vc.viewHistory",
        "title": "UCML: View Prompt History",
        "category": "UCML Prompt VC"
      },
      {
        "command": "ucml-prompt-vc.shareGlyph",
        "title": "UCML: Share Glyph on Twitter",
        "category": "UCML Prompt VC"
      },
      {
        "command": "ucml-prompt-vc.analyzeDrift",
        "title": "UCML: Analyze Prompt Drift",
        "category": "UCML Prompt VC"
      },
      {
        "command": "ucml-prompt-vc.resolveConflict",
        "title": "UCML: Resolve Merge Conflict",
        "category": "UCML Prompt VC"
      },
      {
        "command": "ucml-prompt-vc.createBranch",
        "title": "UCML: Create Prompt Branch",
        "category": "UCML Prompt VC"
      },
      {
        "command": "ucml-prompt-vc.mergeBranch",
        "title": "UCML: Merge Prompt Branch",
        "category": "UCML Prompt VC"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ucml-prompt-vc.createPrompt",
          "group": "ucml-prompt-vc",
          "when": "editorTextFocus"
        },
        {
          "command": "ucml-prompt-vc.viewHistory",
          "group": "ucml-prompt-vc",
          "when": "editorTextFocus"
        },
        {
          "command": "ucml-prompt-vc.shareGlyph",
          "group": "ucml-prompt-vc",
          "when": "editorTextFocus"
        },
        {
          "command": "ucml-prompt-vc.analyzeDrift",
          "group": "ucml-prompt-vc",
          "when": "editorTextFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "ucml-prompt-vc.createPrompt",
          "when": "true"
        },
        {
          "command": "ucml-prompt-vc.viewHistory",
          "when": "true"
        },
        {
          "command": "ucml-prompt-vc.shareGlyph",
          "when": "true"
        },
        {
          "command": "ucml-prompt-vc.analyzeDrift",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "UCML Prompt Version Control",
      "properties": {
        "ucml-prompt-vc.autoMint": {
          "type": "boolean",
          "default": true,
          "description": "Automatically mint UCML glyphs when prompts are saved"
        },
        "ucml-prompt-vc.twitterEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Twitter sharing of UCML glyphs"
        },
        "ucml-prompt-vc.driftThreshold": {
          "type": "number",
          "default": 0.7,
          "description": "Drift score threshold for warnings (0.0 to 1.0)"
        },
        "ucml-prompt-vc.mythgraphEndpoint": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "MythGraph endpoint for lineage tracking"
        },
        "ucml-prompt-vc.ucmlEndpoint": {
          "type": "string",
          "default": "http://localhost:8081",
          "description": "UCML Core Engine endpoint"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "ucml-prompt-vc.prompts",
          "name": "UCML Prompts",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ucml-prompt-vc",
          "title": "UCML Prompt VC",
          "icon": "resources/ucml-icon.svg"
        }
      ]
    },
    "views": {
      "ucml-prompt-vc": [
        {
          "id": "ucml-prompt-vc.prompts",
          "name": "Prompts",
          "when": "true"
        },
        {
          "id": "ucml-prompt-vc.branches",
          "name": "Branches",
          "when": "true"
        },
        {
          "id": "ucml-prompt-vc.conflicts",
          "name": "Conflicts",
          "when": "true"
        },
        {
          "id": "ucml-prompt-vc.drift",
          "name": "Drift Analysis",
          "when": "true"
        }
    ]
    },
    "keybindings": [
      {
        "command": "ucml-prompt-vc.createPrompt",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p",
        "when": "editorTextFocus"
      },
      {
        "command": "ucml-prompt-vc.shareGlyph",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "crypto": "^1.0.1"
  }
}
