# Agent Exo-Suit V3.0 - Dual-Mode RAG System Environment Configuration
# This file configures the CPU+GPU dual-mode RAG system

# Device Configuration
USE_GPU=true
USE_CPU=true
HYBRID_MODE=true

# Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
FAISS_INDEX_PATH=rag/index.faiss
RAG_META_PATH=rag/meta.jsonl

# Performance Tuning
GPU_MEMORY_FRACTION=0.8
CPU_MAX_WORKERS=null
CHUNK_SIZE=512
OVERLAP_SIZE=50

# GPU Settings
GPU_DEVICE_ID=0
GPU_WARMUP_BATCHES=3
GPU_MIXED_PRECISION=true

# CPU Settings
CPU_USE_MKL=true
CPU_MEMORY_MAPPING=true

# Processing Configuration
MAX_WORKERS=null
CHUNK_SIZE=512
OVERLAP=50
TIMEOUT=300

# Output Configuration
LOG_LEVEL=INFO
CACHE_SIZE=2GB
ENABLE_LOGGING=true

# File Discovery
INCLUDE_PATTERNS=*.py,*.js,*.ts,*.md,*.txt,*.yml,*.yaml,*.json,*.xml,*.html,*.css,*.ps1,*.sh
EXCLUDE_PATTERNS=node_modules,target,__pycache__,dist,build,.venv,venv,env,.git,.vscode,*.pyc,*.log,*.tmp,*.cache,*.lock

# Error Handling
ENABLE_FALLBACKS=true
MAX_RETRY_ATTEMPTS=3
GRACEFUL_DEGRADATION=true
MIN_ACCEPTABLE_QUALITY=0.5

# Testing Configuration
ENABLE_BENCHMARKS=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_DEVICE_USAGE_TRACKING=true
